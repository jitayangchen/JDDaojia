<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_goods_photo_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:text="Shop name"/>

        <ImageView
            android:id="@+id/iv_goods_photo_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_goods_photo_2"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_name"/>

        <TextView
            android:id="@+id/tv_goods_price_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/iv_goods_photo_1"
            app:layout_constraintEnd_toEndOf="@id/iv_goods_photo_1"
            app:layout_constraintTop_toBottomOf="@id/iv_goods_photo_1"
            android:text="6.6￥"/>

        <ImageView
            android:id="@+id/iv_goods_photo_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/iv_goods_photo_1"
            app:layout_constraintStart_toEndOf="@id/iv_goods_photo_1"
            app:layout_constraintEnd_toStartOf="@id/iv_goods_photo_3"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_goods_price_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_goods_photo_2"
            app:layout_constraintEnd_toEndOf="@id/iv_goods_photo_2"
            app:layout_constraintTop_toTopOf="@id/tv_goods_price_1"
            android:visibility="invisible"
            android:text="6.6￥"/>

        <ImageView
            android:id="@+id/iv_goods_photo_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@id/iv_goods_photo_1"
            app:layout_constraintStart_toEndOf="@id/iv_goods_photo_2"
            app:layout_constraintEnd_toStartOf="@id/iv_goods_photo_4"/>

        <TextView
            android:id="@+id/tv_goods_price_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/iv_goods_photo_3"
            app:layout_constraintEnd_toEndOf="@id/iv_goods_photo_3"
            app:layout_constraintTop_toTopOf="@id/tv_goods_price_1"
            android:text="6.6￥"/>

        <ImageView
            android:id="@+id/iv_goods_photo_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@id/iv_goods_photo_1"
            app:layout_constraintStart_toEndOf="@id/iv_goods_photo_3"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_goods_price_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@id/iv_goods_photo_4"
            app:layout_constraintEnd_toEndOf="@id/iv_goods_photo_4"
            app:layout_constraintTop_toTopOf="@id/tv_goods_price_1"
            android:text="6.6￥"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>